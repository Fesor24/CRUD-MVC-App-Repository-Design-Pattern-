@model IEnumerable<Student>

<h2 class="text-center"><i class="fa fa-graduation-cap" aria-hidden="true"></i>Students Records</h2>

<div class="row mt-2">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Email</td>
                <td>Phone Number</td>
                <td>Gender</td>
                <td>Registration Date</td>
                <td>
                    <a asp-controller="Student" asp-action="Create" class="btn btn-dark text-white"><i class="fa fa-plus" aria-hidden="true"></i>Add Record</a>
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Gender</td>
                    <td>@item.RegistrationDate</td>
                    <td>
                        <a asp-controller="Student" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-minus-circle" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
